// Place your settings in this file to overwrite the default settings
{
    "workbench.colorTheme": "GitHub Light Default",
    "editor.renderWhitespace": "all",
    "editor.trimAutoWhitespace": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope":"constant.character.escape",
                "settings": {
                    "foreground": "#008000",
                    "fontStyle": ""
                }
            }
        ]
    },
    "files.trimTrailingWhitespace": true,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": false,
    "telemetry.telemetryLevel": "off",
    "editor.rulers": [
        80
    ],
    "editor.acceptSuggestionOnEnter": "smart",
    "update.mode": "none",
    "odb-task.auto-save": true,
    "svn.enableProposedApi": "none",
    "files.associations": {
        "*.pkb": "sql",
        "*.pks": "sql",
        "*.ddl": "sql"
    },
    "[plsql]": {

    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "files.trimTrailingWhitespace": false
    },
    "workbench.colorCustomizations": {
        "terminal.selectionBackground": "#a38e8e",
        "terminal.background": "#000",
        "terminal.foreground": "#fff"
    },
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 5,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.ignoreLegacyWarning": true,
    "editor.tabSize": 2,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "[rust]": {
        "editor.formatOnSave": true
    },
    "docker.dockerodeOptions": {
        "socketPath": "/run/user/1000/podman/podman.sock"
    },
    "redhat.telemetry.enabled": true,
    "workbench.iconTheme": "material-icon-theme",
    "security.workspace.trust.untrustedFiles": "open",
    "window.restoreWindows": "none",
    "terminal.integrated.enableShellIntegration": true,
    "editor.fontFamily": "'IntoneMono Nerd Font Mono', 'SauceCodePro Nerd Font Mono', 'SauceCodePro Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 16,
    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter" : "¤",
    "code-eol.crlfCharacter": "¤¬",
    "terminal.integrated.fontSize": 20,
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path.linux": "/home/trent/.vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    "git.confirmSync": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "vsicons.dontShowNewVersionMessage": true,
    "terminal.integrated.shellIntegration.enabled": false,
    "java.saveActions.organizeImports": true,
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "git.suggestSmartCommit": false,
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.quickSuggestions": {
        "other": "off"
    },
    "eslint.ignoreUntitled": true,
    "yaml.customTags": [
        "!reference sequence"
    ]
}
