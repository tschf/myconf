# Improve bash UX
shopt -s cdspell

# History default to 1000. Lets allow a big history
export HISTSIZE=10000

# Set up environment variables
export PATH=$HOME/bin:$PATH
export PATH=/opt/sqlcl/bin:$PATH
export PATH=$HOME/.local/bin:$PATH
export PATH=$HOME/.local/share/umake/bin:$PATH
export PATH=$HOME/.local/share/umake/nodejs/nodejs-lang/bin:$HOME/.npm_modules/bin:$PATH

export VISUAL=vim
export EDITOR="$VISUAL"

# Golang
export GOPATH=$HOME/Projects/go
export PATH=$PATH:$GOPATH/bin
## Umake specific
export PATH=$HOME/.local/share/umake/go/go-lang/bin:$PATH
export GOROOT=$HOME/.local/share/umake/go/go-lang

# Oracle
export SQLPATH=$HOME/Projects/login.sql/
